/* 通用按钮样式 */
.wechat-btn,
.cancel-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, sans-serif;
  transition: all 0.3s ease;
}

/* 微信登录按钮 */
.wechat-btn {
  background: #54DD67;
  gap: 20rpx;
}

.wechat-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 取消按钮 */
.cancel-btn {
  background-color: #CDCDCD;
}

.cancel-btn:active {
  transform: scale(0.98);
  background-color: #e8e8e8;
}

/* 移除小程序按钮默认的点击态 */
.wechat-btn::after,
.cancel-btn::after {
  border: none;
}


.whisper-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #F8F8F8;
}

/* 背景模糊层：只模糊背景，不影响内容 */
.background-blur {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: 1140rpx 1710rpx;
  background-image: url("https://yinyan-mini.cn-heyuan.oss.aliyuncs.com/20250924/f96d447910d359bad237c97e6bc8d527de93feec_1758690547272.png");
  background-repeat: no-repeat;
  background-position: -168rpx -44rpx;
  filter: blur(8rpx);
  z-index: 0;
}

.frost-bg {
  position: absolute;
  inset: 0;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

.frost-tint {
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.1);
  z-index: 1;
}

.seal-popup-mask {
  display: none;
}

.envelope {
  position: relative;
  z-index: 2;
  width: 90vw;
  max-width: 700rpx;
  margin: calc(env(safe-area-inset-top) + 48rpx) auto 0;
  margin: calc(constant(safe-area-inset-top) + 48rpx) auto 0;
  background: #FAFBFF;
  border: 6rpx solid #E9CDAE;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  padding: 28rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-top: 200rpx;
  height: 70vh;
}

.message-header-btn {
  display: flex;
}

.message-header {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2a44;
}

.time-capsule-message {
  margin-top: 20rpx;
  background: #FBF7F4;
  border-radius: 16rpx;
  padding: 24rpx;
  flex: 1;
  min-height: 40vh;
  overflow-y: auto;
  font-size: 28rpx;
  line-height: 1.9;
  color: #333333;
}

.editor-wrap {
  position: relative;
  width: 100%;
  height: 100%;
}

/* 自定义多行 placeholder */
.textarea-placeholder {
  position: absolute;
  left: 24rpx;
  top: 24rpx;
  right: 24rpx;
  color: #1F1E1F;
  opacity: 0.28;
  pointer-events: none;
  font-size: 28rpx;
  line-height: 1.9;
}

/* 光标聚焦时的高亮效果 */
.letter-textarea:focus {
  border-color: #E9CDAE;
  box-shadow: 0 0 0 4rpx rgba(233, 205, 174, 0.3);
}

.action-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  bottom: calc(24rpx + constant(safe-area-inset-bottom));
  display: flex;
  justify-content: center;
  gap: 28rpx;
  padding: 0 32rpx;
  z-index: 1000;
}

.soul-button-top {
  width: 268rpx !important;
  height: 70rpx !important;
  background-color: #ffffff;
  border: 2rpx solid #000000;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
}

.soul-button {
  width: 280rpx !important;
  height: 100rpx !important;
  font-size: 36rpx;
  background-color: #ffffff;
  border: 2rpx solid #000000;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  color: #000;
  font-family: ZCOOL KuaiLe;
  font-weight: 400;
  font-style: Regular;
  line-height: 140%;
  letter-spacing: 0.6rpx;
  vertical-align: middle;

}
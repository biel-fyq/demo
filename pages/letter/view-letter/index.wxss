.whisper-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: url("https://yinyan-mini.cn-heyuan.oss.aliyuncs.com/20250924/f96d447910d359bad237c97e6bc8d527de93feec_1758690547272.png");
  background-size: cover;
  background-position: center;
}

/* 毛玻璃：用一个半透明图层 + 背景模糊层 */
.frost-bg {
  position: absolute;
  inset: 0;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

.frost-tint {
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.35);
}

.seal-popup-mask { display: none; }

.envelope {
  width: 90vw;
  height: 70vh;
  margin: 0 auto;
  background: #FAFBFF;
  border: 8rpx solid #E9CDAE;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.06);
  padding: 24rpx;
  box-sizing: border-box;
}
.message-header-btn {
  display: flex;
}

.message-header {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2a44;
}

.time-capsule-message {
  margin-top: 16rpx;
  background: #FBF7F4;
  border-radius: 16rpx;
  padding: 32rpx;
  max-height: 58vh;
  overflow-y: auto;
  font-size: 28rpx;
  line-height: 1.9;
  color: #333333;
}

.editor-wrap {
  position: relative;
}

.letter-textarea {
  width: 100%;
  min-height: 48vh; /* 让输入区域更大 */
  border-radius: 16rpx;
  padding: 28rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.9;
  color: #333333;
}

/* 自定义多行 placeholder */
.textarea-placeholder {
  position: absolute;
  left: 28rpx;
  top: 28rpx;
  right: 28rpx;
  color: #b7b7b7;
  pointer-events: none;
  font-size: 28rpx;
  line-height: 1.9;
}

/* 光标聚焦时的高亮效果 */
.letter-textarea:focus {
  border-color: #E9CDAE;
  box-shadow: 0 0 0 4rpx rgba(233, 205, 174, 0.3);
}

.action-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  bottom: calc(24rpx + constant(safe-area-inset-bottom));
  display: flex;
  justify-content: center;
  gap: 28rpx;
  padding: 0 32rpx;
  z-index: 1000;
}

.soul-button {
  width: 280rpx !important;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #3a4a5a;
  background-color: #ffffff;
  border: 2rpx solid #111111;
  border-radius: 60rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}




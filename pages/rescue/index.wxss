page {
  width: 100vw;
  height: 100vh;
  background: #ffffff;
  overflow: hidden;
}

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.background-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.current-stage-module {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 30rpx;
  width: 696rpx;
  height: 204rpx;
  z-index: 3;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(25px);
  -webkit-backdrop-filter: blur(25px);
  border-radius: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 4rpx solid #FECE01;
  padding: 0 20rpx;
}

.stage-info {
  width: 644rpx;
  height: 112rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.stage-label {
  color: #000000;
  margin-bottom: 8rpx;
  font-family: ZCOOL KuaiLe;
  font-weight: 400;
  font-style: Regular;
  font-size: 32rpx;
  line-height: 100%;
  letter-spacing: 0%;
}

.stage-text {
  font-size: 32rpx;
  color: #7B9505;
  font-weight: 600;
  font-family: ZCOOL KuaiLe;
  font-weight: 400;
  font-style: Regular;
  line-height: 100%;
  letter-spacing: 0%;
  margin-top: 30rpx;
}

.healing-btn {
  background: #FECE01;
  color: #000000;
  border: 2.68rpx solid black;
  border-radius: 60rpx;
  font-size: 27rpx;
  font-weight: 600;
  width: 255rpx !important;
  height: 74rpx;
  font-family: ZCOOL KuaiLe;
  font-weight: 400;
  font-style: Regular;
  line-height: 140%;
  letter-spacing: 0.4rpx;
  vertical-align: middle;
  padding: 0;
  box-sizing: border-box;
  display: flex;
	align-items: center;
	justify-content: center;
}

.stage-container {
  position: absolute;
  top: 0rpx;
  left: 90rpx;
  width: 212rpx;
  height: 160rpx;
  z-index: 3;
}

.stage-img {
  width: 100%;
  height: 100%;
  z-index: 1;
}

.stage-text-overlay {
  position: absolute;
  top: 51rpx;
  left: 23rpx;
  width: 158rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  color: #000;
  font-weight: bold;
}

.stage-text-overlay text {
  font-family: ZCOOL KuaiLe;
  font-weight: 400;
  font-style: Regular;
  font-size: 40rpx;
  line-height: 100%;
  letter-spacing: 0%;
  color: #000;
}
/* 整体容器 */
.login-container {
  width: 100vw;
  height: 90vh;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 垂直居中 */
  align-items: center; /* 水平居中 */
  background-color: #ffffff;
}


/* 表单容器 */
.form-container {
  width: 80%;
  max-width: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 用户信息区域 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* 头像样式 */
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

/* 昵称输入区域 */
.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
  margin-bottom: 40rpx;
}

.nickname-label {
  width: 105px;
  font-size: 30rpx;
}

.nickname-input {
  flex: 1;
  font-size: 30rpx;
}

.confirm-button {
  margin-top: 40rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #54DD67;
  color: white;
  font-size: 32rpx;
  border-radius: 45rpx;
  text-align: center;
  padding: 0;
}
.barrier-body {
  background-color: #F8F8F8;
  height: 100vh;
  width: 100vw;
}

/* 再见南墙段落区域 */
.nanqiang-section {
  position: relative;
  width: 100vw;
  overflow: hidden;
}

.nanqian-bag {
  width: 100vw;
  display: block;
}

.nanqiang-text {
  position: absolute;
  left: 50%;
  top: 10vh;
  transform: translateX(-50%);
  width: 82vw;
  line-height: 1.5;
  font-size: 40rpx;
  color: #111;
  text-indent: 2em;
  font-family: ZCOOL KuaiLe;
  font-weight: 400;
  font-style: Regular;
  letter-spacing: 0.3px;
}

.nanqiang-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 22vh;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  padding-left: 12vw;
  padding-bottom: 3vh;
  pointer-events: none;
}

.nanqiang-badge {
  width: 200rpx;
  height: 176rpx;
  pointer-events: auto;
}

/* 固定在屏幕左下的徽章（适配安全区） */
.nanqiang-badge-fixed {
  position: fixed;
  left: 60rpx;
  bottom: calc(124rpx + env(safe-area-inset-bottom));
  bottom: calc(124rpx + constant(safe-area-inset-bottom));
  width: 200rpx;
  height: 176rpx;
  z-index: 20;
}

.barrier {
  width: 70vw;
  margin: 0 auto 16rpx;
  display: flex;
  justify-content: space-between;
  /* 让两组标题分布在两端，距离更远 */
  align-items: flex-end;
}


.barrier-title {
  display: flex;
  flex-direction: column;
  /* 文字在上，图片在下 */
  align-items: center;
}

.pillImage {
  width: 200rpx;
  height: 60rpx;
  margin-top: -16rpx;
  /* 轻微上移，形成手绘下划线效果 */
}


.list {
  flex: 1
}

.list-body-img {
  width: 60vw;
  margin: 0 auto;
  position: relative;
  /* 作为定位上下文 */
}

.list-img {
  width: 456rpx !important;
  height: 738rpx !important;
  display: block;
}

/* 第一行：两个横向排列 */
.tag-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100vw;
  gap: 40rpx;
}

.list-tag-img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.tags-list {
  width: 456rpx;
  /* 与图片等宽 */
  margin: 8rpx auto 0;
  /* 紧贴图片底部 */
  display: flex;
  flex-wrap: wrap;
  /* 第一行两列 */
  gap: 16rpx 16rpx;
  /* 行/列间距 */
  justify-content: center;
}

.tag {
  position: relative;
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 前两项并排显示，占据一行两列 */
.tag-half {
  width: 320rpx;
}

/* 后续为整行宽度的大条 */
.tag-wide {
  width: 100%;
  /* 整行 */
}

/* 让后续条目有轻微上下覆盖感 */
.stack {
  margin-top: -6rpx;
}

/* 轻微旋转，营造错落感 */
.rot-1 {
  transform: rotate(-4deg);
}

.rot-2 {
  transform: rotate(3deg);
}

.rot-3 {
  transform: rotate(-2.5deg);
}

.tag-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
}

.tag-col {
  position: relative;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  margin: 0 12rpx;
}

.tag-col-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
}

/* 第二行开始的整行纸条：与参考图一致做轻微旋转 */
.tag-col1,
.tag-col2,
.tag-col3 {
  position: relative;
  width: 100vw;
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: -58rpx;
}

.tag-col1 {
  transform: rotate(5deg);
}

.tag-col2 {
  transform: rotate(-6deg);
}

.tag-col3 {
  transform: rotate(10deg);
}


.tag-col-text1,
.tag-col-text2,
.tag-col-text3 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 30rpx;
  font-weight: 700;
  color: #000;
}

/* 覆盖标题：定位到图片顶部并水平居中 */
.list-title-over {
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translate(-50%, -100%);
  font-size: 38rpx;
  color: white;
  text-align: center;
  white-space: nowrap;
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #ffffff;
}

/* 内容分类区卡片样式 */
.content-section {
  width: 92vw;
  max-width: 680rpx;
  margin: 24rpx auto;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.content-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111;
}

.item-subtitle {
  font-size: 28rpx;
  color: #666;
}

.item-arrow {
  width: 48rpx;
  height: 48rpx;
}

.icon-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.burst-shape {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  background-color: #a0e75a;
  display: flex;
  justify-content: center;
  align-items: center;
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%,
      79% 91%, 50% 70%, 21% 91%, 32% 57%,
      2% 35%, 39% 35%);
  margin: 0 auto;
}

.icon-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #000000;
  text-align: center;
  padding: 0 20rpx;
  font-family: "Microsoft YaHei", sans-serif;
  transform: skewX(-5deg);
}

.underline {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  width: 60rpx;
  height: 6rpx;
  background-color: #000000;
  transform: translateX(-50%);
  border-radius: 3rpx;
}

.nanqian-bag {
  width: 100vw;
  transform: scale(1.3);
  transform-origin: bottom center;
}


/* ====== 父容器：图片及标签叠加的容器 ====== */
.list-body-img {
  width: 60vw;
  /* 控制图片最大宽度，可根据实际情况调整 */
  margin: 0 auto;
  position: relative;
  /* 关键：作为子元素定位的参考父级 */
  display: block;
}

.list-img {
  width: 100%;
  height: auto;
  display: block;
}


.list-center-overlay {
  position: absolute;
  left: 50%;
  bottom: 18%;           /* 调这个，整体上下移动。建议 14%~22% 区间微调 */
  transform: translate(-50%, 40%); /* 细调向下/向上：正值向下、负值向上 */
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  z-index: 10;
}

/* ====== 第一行：两个并排小标签 ====== */
.tags-row {
  display: flex;
  justify-content: space-between;
  width: 100%;
  gap: 120rpx;
}

.tag-col {
  display: flex;
  flex-direction: column;
  align-items:center;
  width: 40%;
}

.tag-col-img {
  width: 300rpx;
  height: 124rpx;
}

.tag-col-img1 {
  width: 562rpx;
  height: 142rpx;
}

.tag-col-img2 {
  width: 562rpx;
  height: 142rpx;
}

.tag-col-img3 {
  width: 562rpx;
  height: 142rpx;
}

.tag-col-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  text-align: center;
}

/* ====== 第二行起：三个大标签（竖向排列） ====== */
.tag-col1,
.tag-col2,
.tag-col3 {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
}

.tag-col-text1,
.tag-col-text2,
.tag-col-text3 {
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
  text-align: center;
}

/* ====== 右下角固定徽章（已做安全区域适配，保持原样即可） ====== */
.nanqiang-badge-fixed {
  position: fixed;
  left: 60rpx;
  bottom: calc(124rpx + env(safe-area-inset-bottom));
  bottom: calc(124rpx + constant(safe-area-inset-bottom));
  /* 兼容旧版本 */
  width: 200rpx;
  height: 176rpx;
  z-index: 20;
}
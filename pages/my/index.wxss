.my-body {
  width: 100vw;
  height: 100vh;
  background-image: url('https://yinyan-mini.cn-heyuan.oss.aliyuncs.com/20250922/2165d0b79a51b39d0e9847cb20859dc85814f8fb_1758541342328.jpg');
  background-size: cover;
  background-position: center;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* 渐变模糊遮罩层 */
.my-body::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(248, 248, 248, 0) -2.38%, rgba(248, 248, 248, 0.8) 80.29%, rgba(248, 248, 248, 0.85) 70.63%, #F8F8F8 90%);
  z-index: 1;
}

.my-body>view {
  position: relative;
  z-index: 2;
}


/* 顶部背景 + 底部徽章 */
.hero {
  position: relative;
  width: 100vw;
  left: 50%;
  transform: translateX(-50%);
  height: 800rpx;
  overflow: visible;
}

.hero-bg {
  width: 1150rpx;
  height: 800rpx;
}

.hero-avatar {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 4rpx solid #FED24B;
}

.hero-badge {
  position: absolute;
  width: 706rpx;
  height: 140rpx !important;
  left: 50%;
  bottom: 0;
  /* 贴在背景图底部 */
  transform: translateX(-50%);
}

.meritorious-service {
  position: absolute;
  width: 156rpx;
  height: 76rpx;
  margin-left: 20rpx;
  margin-top: -344rpx;
}

.badge-avatars {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 50rpx;
  /* 徽章高度(140rpx) + 20rpx 间距 */
  display: flex;
  gap: 150rpx;
  align-items: center;
}

.avatar-item {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 1px solid;
  border-image-source: linear-gradient(180deg, #FFFFFF 0%, #D7CBCB 100%);
}

.my-actions {
  flex: 1;
  /* 占据剩余高度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* 垂直水平居中 */
  gap: 50rpx;
  padding: 0 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
}

.my-btn {
  width: 320rpx !important;
  height: 120rpx !important;
  line-height: 96rpx;
  border-radius: 56rpx;
  background: #ffffff;
  border: 2rpx solid #111;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

/* 弹窗遮罩和容器 */
.modal-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  z-index: 9999;
}

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 380rpx;
  overflow: auto;
  background: #ffffff;
  border-radius: 40rpx;
}

.modal-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 400;
  color: #000;
  margin-top: 80rpx;

}

/* 确保按钮在 Flex 容器中正常显示 */
.modal-actions {
  display: flex;
  justify-content: center;
  padding: 0 30rpx;
  margin-top: 80rpx;
}

.modal-btn {
  width: 230rpx !important;
  height: 120rpx !important;
  line-height: 88rpx;
  border-radius: 60rpx;
  border: 2rpx solid #111;
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-family: ZCOOL KuaiLe;
  font-weight: 400;
  font-style: Regular;
  line-height: 140%;
  letter-spacing: 0.3px;
  vertical-align: middle;
}

/* 覆盖默认的 ::after 边框，非常重要！ */
.modal-btn::after {
  border: none !important;
  /* 加 !important 来确保覆盖 */
}

/* 按钮点击态（hover 或 active） */
.modal-btn:active {
  /* 模拟点击效果，可以自己定义 */
  transform: scale(0.98);
  /* 稍微缩小 */
  opacity: 0.9;
  /* 稍微变暗 */
  transition: transform 0.1s ease, opacity 0.1s ease;
  /* 平滑过渡 */
}

/* 具体按钮的背景和边框 */
.modal-btn.ghost {
  background: #ffffff;
  color: #666;
  box-sizing: border-box;
  border: 1px solid #000000;
  border-radius: 40px;
}

.modal-btn.primary {
  background: #FFC300;
  border: 2rpx solid #FFC300;
  /* primary 按钮的边框可以和背景色一致 */
  color: #333;
  /* 根据背景色调整字体颜色，让对比度更高 */
  border: 1px solid #000000;
  border-radius: 40px;
}
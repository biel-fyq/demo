.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background: #fff;
    padding: 24rpx;
    box-sizing: border-box;
    width: 85vw;
    margin: 0 auto;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 60rpx;
  }
  
  .content {
    flex: 1;
    line-height: 2;
    font-size: 32rpx;
    color: #333;
    display: flex;
    flex-direction: column;
    gap: 40rpx;
  }
  
  .footer {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 20rpx 0;
    border-top: 1px solid #eee;
  }
  
  .menu-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #333;
    font-size: 28rpx;
  }
  
  .icon {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 6rpx;
  }
  
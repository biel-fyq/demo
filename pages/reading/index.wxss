.container {
  display: flex;
  flex-direction: column;
  width: 100vw;
  min-height: 100vh;
  background: #F8F8F8;
  padding: 24rpx;
  padding-bottom: 150rpx;
  box-sizing: border-box;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.content {
  flex: 1;
  font-size: 32rpx;
  color: #000000;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  font-family: MiSans;
  font-weight: 400;
  font-style: Normal;
  line-height: 180%;
  letter-spacing: 0.3px;
  vertical-align: middle;
  margin-top: 74rpx;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(0rpx + env(safe-area-inset-bottom));
  bottom: calc(0rpx + constant(safe-area-inset-bottom));
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* padding: 14rpx 40rpx; */
  background: #F8F8F8;
  z-index: 100;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items:flex-end;
  color: #333;
  font-size: 28rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 6rpx;
}
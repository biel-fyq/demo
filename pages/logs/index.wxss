page {
  height: 100vh;
  overflow: hidden;
  position: relative;
}

.welcome-page {
  width: 100%;
  height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.fog-background {
  position: absolute;
  top: 120rpx;
  left: 0;
  display: flex;
  width: 100%;
  height: 200rpx;
  z-index: 0;
}

.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  z-index: 5;
  position: relative;
}

.fog-cloud {
  height: 100%;
  z-index: 0;
}

.fog-left {
  flex: 1;
  width: 222rpx;
  height: 222rpx;
  background: #E8F2F8;
  filter: blur(25px);
  backdrop-filter: blur(0rpx);
}

.fog-center {
  flex: 1;
  width: 222rpx;
  height: 222rpx;
  background: #E8F8F7;
  filter: blur(25px);
  backdrop-filter: blur(15rpx);
}

.fog-right {
  flex: 1;
  width: 268rpx;
  height: 268rpx;
  background: #F7F1EE;
  filter: blur(25px);
}

.circle-container {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.welcome-text {
  text-align: center;
  transform: rotate(-8deg);
  margin-bottom: 100rpx;
  width: 80%;
}

.welcome-title {
  display: block;
  font-size: 64rpx;
  font-weight: 400;
  color: #000000;
  letter-spacing: 2rpx;
  text-align: center;
}

.brand-name {
  display: block;
  font-size: 90rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 15rpx;
  letter-spacing: 4rpx;
  text-align: center;
}

.subtitle {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
  letter-spacing: 2rpx;
  text-align: end;
}

.inspirational-text {
  text-align: center;
  transform: rotate(-15deg);
  margin-bottom: 120rpx;
  width: 80%;
  margin-top: 100rpx;
}

.inspirational-text text {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 10rpx;
  letter-spacing: 1rpx;
}

.bottom-illustration {
  width: 466rpx;
  height: 332rpx;
  object-fit: contain;
  margin-top: 40rpx;
}


/* 浮动动画 */
@keyframes float {

  0%,
  100% {
    transform: translateY(0px);
  }

  50% {
    transform: translateY(-15rpx);
  }
}

/* 文字进入动画 */
.welcome-title,
.brand-name,
.subtitle {
  animation: fadeInUp 1s ease-out forwards;
  opacity: 0;
  transform: translateY(20rpx) rotate(-8deg);
}

.brand-name {
  animation-delay: 0.2s;
}

.subtitle {
  animation-delay: 0.4s;
}

.inspirational-text text {
  font-size: 36rpx;
  animation: fadeInUp 1s ease-out forwards;
  opacity: 0;
  transform: translateY(20rpx) rotate(-15deg);
}

.inspirational-text text:nth-child(1) {
  animation-delay: 0.6s;
}

.inspirational-text text:nth-child(2) {
  animation-delay: 0.8s;
}

.inspirational-text text:nth-child(3) {
  animation-delay: 1s;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
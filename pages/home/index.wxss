page {
  width: 100vw;
  height: 100vh;
  background-image: url('https://yinyan-mini.cn-heyuan.oss.aliyuncs.com/20250922/2165d0b79a51b39d0e9847cb20859dc85814f8fb_1758541342328.jpg');
  background-size: cover;
  background-position: center;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
}

/* 自定义头部 */
.custom-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  z-index: 10;
}

.header-left {
  display: flex;
  align-items: center;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.title {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.title text {
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  line-height: 1.2;
}

.header-right {
  display: flex;
  align-items: center;
}

.menu-btn,
.circle-btn {
  background-color: transparent;
  border: none;
  padding: 0 15rpx;
  font-size: 28rpx;
  line-height: 1;
  margin-left: 10rpx;
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.flower-pot {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: calc(124rpx + 96rpx + 16rpx + constant(safe-area-inset-bottom));
  bottom: calc(124rpx + 96rpx + 16rpx + env(safe-area-inset-bottom));
  width: 600rpx;
  height: 486rpx;
  z-index: 2;
}

.progress-container {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: calc(124rpx + constant(safe-area-inset-bottom) + 24rpx);
  bottom: calc(110rpx + env(safe-area-inset-bottom) + 0rpx);
  width: 80%;
  z-index: 2;
}

.process-fill-bg {
  position: absolute;
  left: 4%;
  top: 50%;
  width: 70%;
  height: 32rpx;
  translate: 0 -50%;
  border-radius: 20%;
  background: #ffd54f;
  transform-origin: left center;
  transform: scaleX(0);
  transition: transform 300ms ease;
  z-index: 999;
}

.progress-track {
  position: relative;
  width: 100%;
  height: 36rpx;
  background-color: #ffffff;
  border: 4rpx solid #000000;
  border-radius: 36rpx;
  box-sizing: border-box;
}

.progress-fill {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background-color: #ffd54f;
  /* 柔和黄色 */
  border-top-left-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
  transition: width 0.3s;
}

.progress-thumb {
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background-color: transparent;
}

.thumb-face {
  width: 64rpx;
  height: 64rpx;
  background-image: url('/img/11.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.progress-text {
  display: block;
  text-align: center;
  margin-top: 10rpx;
  font-size: 28rpx;
}

/* 右侧菜单 */
.side-menu {
  position: fixed;
  right: 30rpx;
  top: 25%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menu-icon {
  width: 168rpx;
  height: 164rpx;
}

.watering-can-icon {
  position: fixed;
  left: 40%;
  transform: rotate(-16.89deg);
  bottom: calc(124rpx + 96rpx + 16rpx + 286rpx + 20rpx + constant(safe-area-inset-bottom));
  bottom: calc(124rpx + 50rpx + 16rpx + 286rpx + 30rpx + env(safe-area-inset-bottom));
  width: 400rpx;
  height: 400rpx;
  opacity: 0;
  transition: opacity 0.5s ease;
  z-index: 5;
}

/* 显示水壶图标 */
.watering-can-icon.show {
  opacity: 1;
}

/* 弹框遮罩与内容 */
.popup-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 9998;
}

.popup {
  position: fixed;
  left: 50%;
  top: 18vh;
  transform: translateX(-50%);
  width: 86vw;
  border-radius: 32rpx;
  z-index: 9999;
  /* 高于 tabBar */
  padding: 0 0 32rpx 0;
}

/* 日历弹框 */
.calendar-popup {
  position: fixed;
  left: 50%;
  top: 10vh;
  transform: translateX(-50%);
  width: 88vw;
  max-width: 640rpx;
  z-index: 10000;
}

.calendar-bg {
  position: relative;
}

.calendar-bg-image {
  position: absolute;
  top: -12rpx;
  left: 50%;
  transform: translateX(-50%) scale(1.08);
  width: 110%;
  height: auto;
  display: block;
}

.calendar-content {
  position: absolute;
  inset: 0;
  padding: 60rpx 24rpx 20rpx;
}

.calendar-header {
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 8rpx;
}

.calendar-week {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  margin-bottom: 6rpx;
}

.calendar-week-item {
  text-align: center;
  font-size: 22rpx;
  color: #222;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 12rpx 14rpx;
  /* 列间距 14rpx，用负 margin 精准抵消 */
  padding: 4rpx 10rpx;
}

.calendar-cell {
  height: 68rpx;
  position: relative;
}

.calendar-day {
  height: 100%;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.calendar-day text {
  font-size: 24rpx;
  color: #000;
  font-weight: 700;
}

/* 今天的日期文字样式 - 使用更高优先级的选择器 */
.calendar-day text.calendar-nowday,
.calendar-day .calendar-nowday,
text.calendar-nowday {
  color: #E04E47 !important;
  font-size: 24rpx;
  font-weight: 700;
}

.calendar-tick {
  position: absolute;
  right: 35rpx;
  bottom: 4rpx;
  font-size: 20rpx;
  color: #E04E47;
}

/* 所有选中日期的勾勾都水平居中 */
.calendar-day.checked .calendar-tick {
  right: 50%;
  transform: translateX(50%);
}

/* 被选中的日期基础样式 */
.checked {
  border: 2rpx solid #ffcc66;
  border-radius: 14rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 分组背景色定义 */

/* 所有选中的日期都保持独立样式 */
.calendar-day.group-a,
.calendar-day.group-b,
.calendar-day.group-c,
.calendar-day.group-d,
.calendar-day.group-e,
.calendar-day.single {
  border-radius: 14rpx;
  border: 2rpx solid #ffcc66;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 组内元素样式调整 - 让背景色显示 */
.calendar-day.group-a.checked,
.calendar-day.group-b.checked,
.calendar-day.group-c.checked,
.calendar-day.group-d.checked,
.calendar-day.group-e.checked {
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  background-color: transparent;
}

/* 所有分组使用相同的背景色 */
.calendar-day.group-a,
.calendar-day.group-b,
.calendar-day.group-c,
.calendar-day.group-d,
.calendar-day.group-e {
  background-image: linear-gradient(#FAE768 0%,#FFF1B5 100%);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.calendar-day.single {
  background-image: linear-gradient(#FAE768 0%,#FFF1B5 100%);
}


.today {
  border: 4rpx solid #E04E47;
  border-radius: 25rpx;
}

.calendar-today-flag {
  position: absolute;
  left: 6rpx;
  bottom: 4rpx;
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid #E04E47;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #E04E47;
  background: #fff;
}

.calendar-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.calendar-btn {
  width: 64rpx;
  height: 64rpx;
  margin-top: 40rpx;
}

.popup-header {
  position: absolute;
  left: 40rpx;
  top: 20rpx;
  font-size: 64rpx;
  color: #ffffff;
  font-weight: 700;
}

.popup-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.popup-figure {
  margin-top: 0;
  position: relative;
  width: 100%;
}

.popup-image {
  width: 100%;
  height: 542rpx !important;
  display: block;
  border-radius: 24rpx;
}

.popup-text-group {
  position: absolute;
  left: 0;
  right: 0;
  top: 28%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.popup-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #000;
  text-align: center;
}

.popup-subtitle {
  font-size: 40rpx;
  font-weight: 700;
  color: #000;
}

.popup-content text {
  order: 1;
}

.popup-content .confirm-btn {
  order: 2;
}

.popup-content image {
  order: 3;
  width: 100%;
  display: block;
  border-radius: 24rpx;
}

.confirm-btn {
  width: 80%;
  height: 96rpx;
  line-height: 96rpx;
  background: #f7c52b;
  color: #000000;
  border-radius: 48rpx;
  border: 2rpx solid #000000;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
  margin-top: 40rpx;
}

.process-box {
  position: relative;
  width: 100%;
  height: 56rpx;
  margin: 0 auto;
}

.process-bag {
  position: relative;
  display: block;
  width: 100%;
  height: 56rpx;
  object-fit: contain;
  pointer-events: none;
  z-index: 3;
}

.process-fill {
  position: absolute;
  left: 1.2%;
  top: 50%;
  width: 97.6%;
  height: 52rpx;
  transform-origin: left center;
  background: #ffd54f;
  border-radius: 999rpx;
  transform: scaleX(0);
  transition: transform 300ms ease;
  translate: 0 -50%;
  z-index: 1;
}

.process-icon {
  position: absolute;
  top: 20%;
  width: 68rpx;
  height: 75rpx;
  transform: translate(-50%, -45%);
  z-index: 9999
}

.frost-tint {
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.55);
}
page {
	width: 100vw;
	height: 100vh;
	background-image: url('https://yinyan-mini.cn-heyuan.oss.aliyuncs.com/20250922/2165d0b79a51b39d0e9847cb20859dc85814f8fb_1758541342328.jpg');
	background-size: cover;
	background-position: center;
}

.container {
	display: flex;
	flex-direction: column;
	height: 100%;
	position: relative;
}

/* 自定义头部 */
.custom-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 30rpx;
	z-index: 10;
}

.header-left {
	display: flex;
	align-items: center;
}

.icon {
	width: 40rpx;
	height: 40rpx;
}

.title {
	display: flex;
	flex-direction: column;
	margin-left: 10rpx;
}

.title text {
	font-size: 32rpx;
	font-weight: bold;
	letter-spacing: 2rpx;
	line-height: 1.2;
}

.header-right {
	display: flex;
	align-items: center;
}

.menu-btn,
.circle-btn {
	background-color: transparent;
	border: none;
	padding: 0 15rpx;
	font-size: 28rpx;
	line-height: 1;
	margin-left: 10rpx;
}

.main-content {
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-end;
}

.flower-pot {
	position: fixed;
	left: 50%;
	transform: translateX(-50%);
	bottom: calc(124rpx + 96rpx + 16rpx + constant(safe-area-inset-bottom));
	bottom: calc(124rpx + 96rpx + 16rpx + env(safe-area-inset-bottom));
	width: 600rpx;
	height: 486rpx;
	z-index: 2;
}

.progress-container {
	position: fixed;
	left: 50%;
	transform: translateX(-50%);
	bottom: calc(124rpx + constant(safe-area-inset-bottom) + 24rpx);
	bottom: calc(110rpx + env(safe-area-inset-bottom) + 0rpx);
	width: 80%;
	z-index: 2;
}

.process-fill-bg {
	position: absolute;
	left: 4%;
	top: 50%;
	width: 70%;
	height: 32rpx;
	translate: 0 -50%;
	border-radius: 20%;
	background: #ffd54f;
	transform-origin: left center;
	transform: scaleX(0);
	transition: transform 300ms ease;
	z-index: 999;
}

.progress-track {
	position: relative;
	width: 100%;
	height: 36rpx;
	background-color: #ffffff;
	border: 4rpx solid #000000;
	border-radius: 36rpx;
	box-sizing: border-box;
}

.progress-fill {
	position: absolute;
	left: 0;
	top: 0;
	height: 100%;
	background-color: #ffd54f;
	/* 柔和黄色 */
	border-top-left-radius: 32rpx;
	border-bottom-left-radius: 32rpx;
	transition: width 0.3s;
}

.progress-thumb {
	position: absolute;
	top: 50%;
	transform: translate(-50%, -50%);
	width: 64rpx;
	height: 64rpx;
	border-radius: 16rpx;
	background-color: transparent;
}

.thumb-face {
	width: 64rpx;
	height: 64rpx;
	background-image: url('/img/11.png');
	background-size: contain;
	background-repeat: no-repeat;
	background-position: center;
}

.progress-text {
	display: block;
	text-align: center;
	margin-top: 10rpx;
	font-size: 28rpx;
}

/* 右侧菜单 */
.side-menu {
	position: fixed;
	right: 30rpx;
	top: 25%;
	transform: translateY(-50%);
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 40rpx;
}

.menu-item {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.menu-icon {
	width: 168rpx;
	height: 164rpx;
}

.watering-can-icon {
	position: fixed;
	left: 40%;
	transform: rotate(-16.89deg);
	bottom: calc(124rpx + 96rpx + 16rpx + 286rpx + 20rpx + constant(safe-area-inset-bottom));
	bottom: calc(124rpx + 50rpx + 16rpx + 286rpx + 30rpx + env(safe-area-inset-bottom));
	width: 400rpx;
	height: 400rpx;
	opacity: 0;
	transition: opacity 0.5s ease;
	z-index: 5;
}

/* 显示水壶图标 */
.watering-can-icon.show {
	opacity: 1;
}

/* 弹框遮罩与内容 */
.popup-mask {
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.35);
  z-index: 9998;
}

.popup {
	position: fixed;
	left: 50%;
	top: 18vh;
	transform: translateX(-50%);
	width: 86vw;
	border-radius: 32rpx;
  z-index: 9999;
	/* 高于 tabBar */
	padding: 0 0 32rpx 0;
}

/* 日历弹框 */
.calendar-popup {
	position: fixed;
	left: 50%;
	top: 10vh;
	transform: translateX(-50%);
	width: 88vw;
	max-width: 640rpx;
  z-index: 10000;
}

.calendar-bg {
	position: relative;
}

.calendar-bg-image {
	position: absolute;
	top: -12rpx;
	left: 50%;
	transform: translateX(-50%) scale(1.08);
	width: 110%;
	height: auto;
	display: block;
}

.calendar-content {
	position: absolute;
	inset: 0;
	padding: 60rpx 24rpx 20rpx;
}

.calendar-header {
	text-align: center;
	font-size: 32rpx;
	font-weight: 700;
	color: #000;
	margin-bottom: 8rpx;
}

.calendar-week {
	display: grid;
	grid-template-columns: repeat(7, 1fr);
	gap: 10rpx;
	margin-bottom: 6rpx;
}

.calendar-week-item {
	text-align: center;
	font-size: 22rpx;
	color: #222;
}

.calendar-grid {
	display: grid;
	grid-template-columns: repeat(7, 1fr);
	gap: 12rpx 14rpx; /* 列间距 14rpx，用负 margin 精准抵消 */
	padding: 4rpx 10rpx;
}

.calendar-cell {
	height: 68rpx;
	position: relative;
}

.calendar-day {
	height: 100%;
	border-radius: 20rpx;
	background: rgba(255, 235, 150, 0.88);
	display: flex;
	align-items: center;
	justify-content: center;
	position: relative;
	box-shadow: 0 2rpx 0 rgba(0, 0, 0, 0.08);
}

.calendar-day text {
	font-size: 24rpx;
	color: #000;
	font-weight: 700;
}

.calendar-tick {
	position: absolute;
	right: 35rpx;
	bottom: 4rpx;
	font-size: 20rpx;
	color: #e77;
}

/* 连续块：让相邻项连成一条带，利用负边距覆盖网格间隙 */
.group-a {
	background: #fee699;
}

.group-b {
	background: #fde28a;
}

.group-c {
	background: #fbdc7a;
}

.checked {
	box-shadow: inset 0 0 0 3rpx #ffcc66;
}

/* 把连续的块拼接起来：去掉中间圆角并用负 margin 覆盖左右间隙 */
.calendar-day.group-a,
.calendar-day.group-b,
.calendar-day.group-c { border-radius: 0; }
.calendar-day.start { border-top-left-radius: 34rpx; border-bottom-left-radius: 34rpx; margin-right: -16rpx; }
.calendar-day.mid { margin-left: -16rpx; margin-right: -16rpx; }
.calendar-day.end { border-top-right-radius: 34rpx; border-bottom-right-radius: 34rpx; margin-left: -16rpx; }
.calendar-day.single { border-radius: 34rpx; }

/* 组内元素去掉内嵌描边，避免拼接处出现细线 */
.calendar-day.group-a.checked,
.calendar-day.group-b.checked,
.calendar-day.group-c.checked { box-shadow: none; }

/* 让连续的勾选日期连成带状，并在两端做圆角 */
.calendar-day.group-a,
.calendar-day.group-b,
.calendar-day.group-c { border-radius: 0; }
.calendar-day.start { border-top-left-radius: 34rpx; border-bottom-left-radius: 34rpx; }
.calendar-day.end { border-top-right-radius: 34rpx; border-bottom-right-radius: 34rpx; }
.calendar-day.single { border-radius: 34rpx; }


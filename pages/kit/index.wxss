.kit-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 背景图 */
.bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 750rpx;
  height: 1824rpx;
}

/* 磨砂遮罩 */
.bg-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  z-index: 2;
}

/* 自适应画布：按宽度铺满，内部用百分比定位，随比例缩放 */
.canvas {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 5;
}

.canvas-inner {
  position: relative;
  width: 92vw;
  /* 画布宽度占屏宽，统一缩放基准 */
  aspect-ratio: 9 / 16;
  /* 统一比例，避免不同机型拉伸位移 */
}

/* 笔记本背景：宽度等比缩放，充满画布 */
.notebook-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3;
  width: 778rpx;
  height: 1168rpx;
}

/* 标题气泡：用百分比定位，随容器缩放 */
.title-bubble {
  position: absolute;
  top: -2%;
  /* 相对于画布高度的百分比 */
  right: 15%;
  z-index: 2;
  width: 430rpx;
  height: 198rpx;
}

/* 内容区域：用百分比定义位置和大小，适配所有机型 */
.content-scroll {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  width: 540rpx;
  height: 640rpx;
  z-index: 3;
  overflow-y: auto;
}

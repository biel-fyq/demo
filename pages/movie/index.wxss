/* 海报基础样式与交互（统一定义一次） */
.poster-item {
  position: relative;
  width: 280rpx;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s ease-in-out;
  margin: 0 -40rpx; /* 负 margin 让图片互相交叉 */
  opacity: 0.7;
}

.poster-item .poster-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.poster-item.active {
  transform: scale(1.2);
  opacity: 1;
  z-index: 10;
}

.center-play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}



/* 读本好书横排 */
.books-row {
  width: 92vw;
  margin: -12rpx auto 0; /* 向上收紧与标题的间距 */
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  gap: 24rpx;
}

.book-image {
  width: 300rpx;
  height: 400rpx;
}
.poster-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 580rpx;
  position: relative;
  margin-top: -24rpx; /* 整体上移一点 */
}

/* 基础样式（未选中） */
.poster-item {
  position: relative;
  width: 260rpx;
  height: 380rpx;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s ease-in-out;
  margin: 0 -56rpx; /* 放大后适当加大交叉重叠 */
  opacity: 0.7;
}

.poster-item .poster-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* 当前选中 */
.poster-item.active {
  transform: scale(1.35);
  opacity: 1;
  z-index: 10;
  border-radius: 18rpx;
}

/* 播放按钮 */

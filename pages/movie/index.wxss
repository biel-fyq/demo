.movie-body {
  width: 94vw;
  margin: 0 auto;
  /* 预留底部安全区域 + tabBar 高度，避免内容被遮挡 */
  padding-bottom: calc(18rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(18rpx + constant(safe-area-inset-bottom));
}

.moviePillContainer {
  display: flex;
  flex-direction: column;
}
.moviePillContainer.compact .movieTitle { margin-top: -32rpx; }
.moviePillContainer.compact .pillImage { margin-top: -36rpx; }

.movieTitle {
  font-family: ZCOOL KuaiLe;
  font-weight: 400;
  font-style: Regular;
  font-size: 40rpx;
  line-height: 100%;
  letter-spacing: 0%;
  margin-top: 56rpx;
  margin-left: 38rpx;
  color: #000000;
}

.pillImage {
  width: 160rpx;
  height: 130rpx;
  margin-top: -50rpx;
  margin-left: 38rpx;
  z-index: -1;
}

.center-play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}



.books-row {
  width: 92vw;
  margin: -12rpx auto 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  gap: 24rpx;
}

.book-image {
  width: 300rpx;
  height: 400rpx;
}

.poster-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  overflow: visible;
}

/* 基础样式（未选中） */
.poster-item {
  position: relative;
  /* 未选中：140px × 200px → 280rpx × 400rpx（按750设计稿换算） */
  width: 280rpx;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 0 -54rpx  0 -34rpx;
}

.poster-item .poster-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* 当前选中 */
.poster-item.active {
  /* 选中：177px × 242.09px → ≈354rpx × 484rpx */
  width: 354rpx;
  height: 484rpx;
  opacity: 1;
  z-index: 10;
  border-radius: 18rpx;
}

/* 播放按钮 */
.play-icon {
  width: 96rpx;
  height: 96rpx;
}

.movie-text-body {
  width: 80VW;
  margin: 0 auto;
  text-align: center;
  margin-top: 72rpx;
}

.movie-text-sub {
  font-family: Inter;
  font-weight: 400;
  font-style: Regular;
  font-size: 24rpx;
  line-height: 100%;
  letter-spacing: 0%;
  text-align: center;
  margin-top: 20rpx;
  line-height: 40rpx;

}

/* 品品语录图片样式 */
.book {
  width: 100%;
  max-width: 600rpx;
  height: 600rpx;
  margin: 40rpx auto 18rpx;
  display: block;
  padding: 0 20rpx;
  box-sizing: border-box;
}


/* 书籍弹框样式 */
.book-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.book-modal {
  background: #ffffff;
  border-radius: 40rpx;
  width: 482rpx;
  height: 660rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.book-modal-cover {
  width: 100%;
  height: 314rpx;
  object-fit: cover;
}

.book-modal-content {
  padding: 40rpx 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.book-modal-author {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.book-modal-description {
  font-size: 28rpx;
  color: #000;
  font-family: PingFang SC;
  font-weight: 400;
  font-style: Regular;
  line-height: 40rpx;
  letter-spacing: 0rpx;
  width: 100%;
  margin-bottom: 10rpx;
}

.book-modal-btn {
  width: 284rpx !important;
  height: 100rpx !important;
  background: #FECE01;
  color: #000;
  border: 2rpx solid #000;
  border-radius: 80rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.book-modal-btn::after {
  border: none;
}
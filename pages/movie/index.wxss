/* 品品语录图片样式 */
.book {
  width: 100%;
  max-width: 600rpx;
  height: 600rpx;
  margin: 40rpx auto 160rpx; /* 顶部40rpx间距，底部160rpx空白距离，避免被菜单栏遮挡 */
  display: block;
  padding: 0 20rpx; /* 左右内边距 */
  box-sizing: border-box;
}

.movie-logo {
  position: fixed;
	top: calc(80rpx + env(safe-area-inset-top));
	left: 12%;
	transform: translateX(-50%);
	z-index: 9999;
	width: 162rpx;
	height: 64rpx;
}

/* 书籍弹框样式 */
.book-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.book-modal {
  background: #ffffff;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.book-modal-cover {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

.book-modal-content {
  padding: 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.book-modal-author {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.book-modal-description {
  font-size: 28rpx;
  color: #000;
  margin-bottom: 40rpx;
  font-family: PingFang SC;
  font-weight: 400;
  font-style: Regular;
  line-height: 20px;
  letter-spacing: 0px;
  width: 100%;
}

.book-modal-btn {
  width: 230rpx !important; /* 强制设置宽度 */
	height: 88rpx;
  background: #FFC300;
  color: #333;
  border: 2rpx solid #000;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 40rpx; /* 改为居中，去掉左右margin */
  box-sizing: border-box;
  flex-shrink: 0; /* 防止被压缩 */
}

.book-modal-btn::after {
  border: none;
}
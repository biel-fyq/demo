.feedback-page {
  min-height: 100vh;
  background: #F8F8F8;
}


.content {
  padding: 32rpx 32rpx 48rpx;
}

.label {
  color: #A47435;
  font-size: 36rpx;
  font-family: ZCOOL KuaiLe;
  font-weight: 400;
  font-style: Regular;
  line-height: 140%;
  letter-spacing: 0.3px;
}

.input-card {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 16rpx;
  /* box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04); */
  position: relative;
}

.textarea {
  width: 100%;
  height: 420rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.ph {
  color: #D0D0D0;
}

.counter {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
}


.confirm-btn {
  width: 320rpx !important;
  height: 110rpx !important;
  line-height: 96rpx;
  text-align: center;
  border-radius: 60rpx;
  background: #FECE01;
  border: 4rpx solid #111;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
  margin-top: 60rpx;
}

.confirm-btn[disabled] {
  opacity: 0.6;
}
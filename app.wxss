/* 顶部安全区工具类：在 iPhone 刘海、胶囊等设备上留白，其他机型不受影响 */
.safe-top {
	padding-top: constant(safe-area-inset-top);
	padding-top: env(safe-area-inset-top);
}

/* 底部安全区工具类 */
.safe-bottom {
	padding-bottom: constant(safe-area-inset-bottom);
	padding-bottom: env(safe-area-inset-bottom);
}

.safe-top-spacer {
  height: calc(88rpx + constant(safe-area-inset-top)); /* 旧，可省略 */
  height: calc(88rpx + env(safe-area-inset-top));      /* 新，推荐 */
  min-height: 44rpx;
	width: 100%;
}

.logo {
  width: 163rpx;
  height: 64rpx;
  position: fixed;
  left: 44rpx;
  z-index: 10;
  /* 添加最小顶部距离，确保在非刘海屏设备上也有合适位置 */
}


@keyframes rotateIn {
  from { transform: rotate(-5deg) scale(0.9); opacity: 0; }
  to { transform: rotate(0) scale(1); opacity: 1; }
}
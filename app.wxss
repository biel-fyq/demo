/* 顶部安全区工具类：在 iPhone 刘海、胶囊等设备上留白，其他机型不受影响 */
.safe-top {
	padding-top: constant(safe-area-inset-top);
	padding-top: env(safe-area-inset-top);
}

/* 底部安全区工具类 */
.safe-bottom {
	padding-bottom: constant(safe-area-inset-bottom);
	padding-bottom: env(safe-area-inset-bottom);
}

.safe-top-spacer {
  height: calc(88rpx + constant(safe-area-inset-top)); /* 旧，可省略 */
  height: calc(88rpx + env(safe-area-inset-top));      /* 新，推荐 */
	width: 100%;
}

.logo {
  width: 164rpx;
	height: 64rpx;
	position: fixed;
	top: calc(92rpx + constant(safe-area-inset-top));
	top: calc(92rpx + env(safe-area-inset-top));
	left: 48rpx;
	z-index: 10;
}
